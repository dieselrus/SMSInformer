<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:key="mail_user"
        android:title="@string/pref_title_mail_user"
        android:defaultValue="@string/pref_default_mail_user"
        android:selectAllOnFocus="true"
        android:inputType="text"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <EditTextPreference
        android:key="mail_password"
        android:title="@string/pref_title_mail_password"
        android:defaultValue="@string/pref_default_mail_password"
        android:summary="******"
        android:selectAllOnFocus="true"
        android:inputType="textPassword"
        android:singleLine="true"
        android:maxLines="1" />

    <EditTextPreference
        android:key="mail_host"
        android:title="@string/pref_title_mail_host"
        android:defaultValue="@string/pref_default_mail_host"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <ListPreference
        android:key="mail_store_protocol"
        android:title="@string/pref_title_mail_store_protocol"
        android:defaultValue="0"
        android:entries="@array/pref_mail_store_protocol_list_titles"
        android:entryValues="@array/pref_mail_store_protocol_list_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

    <EditTextPreference
        android:key="mail_subject"
        android:title="@string/pref_title_mail_subject"
        android:defaultValue="@string/pref_default_mail_subject"
        android:selectAllOnFocus="true"
        android:inputType="text"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

</PreferenceScreen>
